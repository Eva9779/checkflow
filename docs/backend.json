
{
  "entities": {
    "BankAccount": {
      "title": "Bank Account",
      "description": "A connected U.S. bank account for e-check transfers.",
      "type": "object",
      "properties": {
        "bankName": { "type": "string" },
        "bankAddress": { "type": "string", "description": "Physical address of the bank branch" },
        "routingNumber": { "type": "string" },
        "accountNumber": { "type": "string", "description": "Masked account number" },
        "fractionalRouting": { "type": "string", "description": "The fractional form of the routing number found on checks" },
        "isDefault": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["bankName", "routingNumber", "accountNumber"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "An e-check payment record.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["sent", "received", "requested"] },
        "recipientName": { "type": "string" },
        "recipientAddress": { "type": "string", "description": "Payee address for physical check mailing" },
        "amount": { "type": "number" },
        "memo": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending", "failed"] },
        "date": { "type": "string", "format": "date" },
        "checkNumber": { "type": "string", "description": "Unique check identification number" },
        "fromAccountId": { "type": "string" },
        "payerBankName": { "type": "string" },
        "payerRoutingNumber": { "type": "string" },
        "payerAccountNumber": { "type": "string" },
        "payerBankAddress": { "type": "string" },
        "signatureData": { "type": "string", "description": "Base64 encoded signature image for authorization" }
      },
      "required": ["type", "recipientName", "amount", "status", "date"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}/accounts/{accountId}": {
      "schema": "BankAccount",
      "description": "User-specific bank accounts"
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": "Transaction",
      "description": "User-specific payment history"
    }
  }
}
