
{
  "entities": {
    "BankAccount": {
      "title": "Bank Account",
      "description": "A connected U.S. bank account for e-check transfers.",
      "type": "object",
      "properties": {
        "bankName": { "type": "string" },
        "bankAddress": { "type": "string" },
        "routingNumber": { "type": "string" },
        "accountNumber": { "type": "string" },
        "fractionalRouting": { "type": "string" },
        "isDefault": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["bankName", "routingNumber", "accountNumber"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "An e-check or ACH payout record.",
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["sent"] },
        "recipientName": { "type": "string" },
        "recipientAddress": { "type": "string" },
        "recipientRouting": { "type": "string" },
        "recipientAccount": { "type": "string" },
        "amount": { "type": "number" },
        "memo": { "type": "string" },
        "status": { "type": "string", "enum": ["completed", "pending", "failed"] },
        "date": { "type": "string", "format": "date" },
        "checkNumber": { "type": "string" },
        "fromAccountId": { "type": "string" },
        "payerBankName": { "type": "string" },
        "payerRoutingNumber": { "type": "string" },
        "payerAccountNumber": { "type": "string" },
        "deliveryMethod": { "type": "string", "enum": ["print", "stripe"] },
        "signatureData": { "type": "string" },
        "stripeTransferId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["recipientName", "amount", "status", "date", "deliveryMethod"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}/accounts/{accountId}": {
      "schema": "BankAccount",
      "description": "Stored business source bank accounts"
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": "Transaction",
      "description": "Records of issued payouts"
    }
  }
}
